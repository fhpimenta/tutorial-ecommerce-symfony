{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>User</h1>

                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Nome</th>
                        <td>{{ user.nome }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Is Active?</th>
                        <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
                    </tr>
                    </tbody>
                </table>

                <a class="btn btn-default" href="{{ path('users_index') }}">Back to the list</a>

                <a class="btn btn-default" href="{{ path('users_edit', { 'id': user.id }) }}">Edit</a>

                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
                {{ form_end(delete_form) }}

            </div>
        </div>
    </div>

{% endblock %}
